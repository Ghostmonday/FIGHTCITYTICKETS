# =============================================
# FIGHTCITYTICKETS - Environment Variables Template
# =============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real secrets to version control!
# =============================================

# =============================================
# APPLICATION CONFIGURATION
# =============================================
APP_ENV=production
APP_URL=https://fightcitytickets.com
FRONTEND_URL=https://fightcitytickets.com
# API URL - UPDATE THIS FOR PRODUCTION DEPLOYMENT!
# For local dev: API_URL=http://localhost:8000
# For production: API_URL=https://fightcitytickets.com/api
API_URL=https://fightcitytickets.com/api
SECRET_KEY=your-secure-random-secret-key-here-min-32-chars

# =============================================
# DATABASE CONFIGURATION
# =============================================
# PostgreSQL connection string for Docker Compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=fightsf
DATABASE_URL=postgresql+psycopg://postgres:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# =============================================
# STRIPE PAYMENT PROCESSING
# =============================================
# Get keys from: https://dashboard.stripe.com/apikeys
# Use LIVE keys for production, TEST keys for development
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (from Stripe Dashboard â†’ Products)
# Standard Mail: ~$9.89 (ARCHIVED)
STRIPE_PRICE_STANDARD=price_xxx
# Certified Mail: ~$19.89 (ACTIVE)
STRIPE_PRICE_CERTIFIED=price_xxx

# Service Fee Configuration (in cents)
FIGHTCITY_STANDARD_FEE=0
FIGHTCITY_SERVICE_FEE=1989

# =============================================
# LOB MAILING SERVICE
# =============================================
# Get API key from: https://dashboard.lob.com/settings/api-keys
# Use LIVE mode for production, TEST mode for development
LOB_API_KEY=live_xxx
LOB_MODE=live

# =============================================
# AI SERVICES
# =============================================
# DeepSeek AI - for letter refinement
# Get API key from: https://platform.deepseek.com/api-keys
DEEPSEEK_API_KEY=sk-xxx

# =============================================
# FRONTEND CONFIGURATION
# =============================================
# UPDATE THIS FOR PRODUCTION!
# Local dev: NEXT_PUBLIC_API_BASE=http://localhost:8000
# Production: NEXT_PUBLIC_API_BASE=https://fightcitytickets.com/api
NEXT_PUBLIC_API_BASE=https://fightcitytickets.com/api
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your_google_places_api_key

# =============================================
# CORS & SECURITY
# =============================================
CORS_ORIGINS=https://fightcitytickets.com,https://www.fightcitytickets.com,http://localhost:3000

# =============================================
# LOGGING & DEBUG
# =============================================
DEBUG=false
LOG_LEVEL=info

# =============================================
# KAMATERA CLOUD (for server management)
# =============================================
# Get credentials from: https://console.kamatera.com/
# These are used for server provisioning scripts only
KAMATERA_API_CLIENT_ID=your_kamatera_client_id
KAMATERA_API_SECRET=your_kamatera_api_secret
