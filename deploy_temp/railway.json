{
  "$schema": "https://railway.com/schema.json",
  "name": "FightCityTickets",
  "services": {
    "backend": {
      "name": "backend",
      "sourceDir": "backend",
      "dockerfile": "backend/Dockerfile",
      "healthcheckPath": "/health",
      "healthcheckPort": 8000,
      "restartPolicyType": "always",
      "variables": {
        "DATABASE_URL": "${postgres.DATABASE_URL}",
        "APP_ENV": "prod"
      },
