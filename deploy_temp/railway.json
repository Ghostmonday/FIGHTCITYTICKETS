    },
    "frontend": {
      "name": "frontend",
      "sourceDir": "frontend",
      "dockerfile": "frontend/Dockerfile",
      "healthcheckPath": "/",
      "healthcheckPort": 3000,
      "restartPolicyType": "always",
      "variables": {
        "NEXT_PUBLIC_API_BASE": "http://backend:8000",
        "APP_ENV": "prod"
      },
      "dependsOn": ["backend"]
    },
